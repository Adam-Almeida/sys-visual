generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String      @id       @default(uuid())
  username    String      @unique
  password    String
  email       String
  lastAcess   DateTime    @default(now())
  type        Role        @default(CLIENT)
  @@map("user")
}

enum Role {
  USER               //FUNCIONÁRIOS DE PRODUÇÃO
  ADMIN              //SUPER ADMIN
  CLIENT             //CLIENTES
}